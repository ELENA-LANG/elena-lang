/// Anonymous recursion

import extensions.

fib(n)
[
    if (n < 0)
        [ InvalidArgumentException new:"Must be non negative"; raise ].
        
    ^ (:n)
        [
            if (n > 1)
                [ ^ @self(n - 2) + @self(n - 1) ];
                [ ^ n ]
        ](n)
]

public program
[
    -1 to:10 do(:i)
    [
        try (console printLine("fib(",i,")=",fib(i)))        
        {
            on(Exception e)
            [
                console printLine:"invalid"
            ]
        }
    ].
    
    console readChar.
]
