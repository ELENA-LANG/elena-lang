============================================================================
 ELENA Programming Language
============================================================================

----------------------------------------------------------------------------
 A class method invoke closure
----------------------------------------------------------------------------

import extensions;

class A
{
   Func1 onClick : event;

   constructor()
   {
      onClick := &onExit;
   }

   onExit(sender)
   {
     console.printLine("onExit was called by ", sender);
   }

   invoke(sender)
   {
      onClick(sender)
   }
}

public program()
{
   var a := new A();

   a.invoke(this self);
}

----------------------------------------------------------------------------
 A shared code
----------------------------------------------------------------------------

import extensions;

textblock Shared
{
   foo()
   {
      console.writeLine("foo")
   }
}

class A : using(Shared)
{
   bar()
   {
      console.writeLine("bar")
   }
}

public program()
{
   var a := new A();

   a.foo();
   a.bar();
}


----------------------------------------------------------------------------
 Preloaded symbols
----------------------------------------------------------------------------

    symbol startUp : preloaded = true.then(
    {  
       console.writeLine("Starting up")
    });

    public myFunction()
    {
       console.writeLine("Working");
    }

    public program()
    {
       myFunction()
    }

----------------------------------------------------------------------------
 String interpolation
----------------------------------------------------------------------------

  var s := var s := $"a_{ 1 }_b_{ 2 }_c";
