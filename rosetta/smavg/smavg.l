#class SMA
{
    #field thePeriod.
    #field theList.
    
    #constructor new : aPeriod
    [
        thePeriod := aPeriod.
        theList := List new.
    ]
    
    #method append : aNumber
    [
        theList += aNumber.

        #var aCount := theList length.
        ^ aCount =>
            0 ?  [ 0.0r ] 
            ! [
                (aCount > thePeriod)?
                [
                    theList remove &index:0.
                    
                    aCount := thePeriod.
                ].
        
                #var aSum := Summing new:(Real new &int:0) foreach:theList.
                
                ^ aSum / aCount.
            ].
    ]
}

